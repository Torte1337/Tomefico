<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tomefico.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Tomefico.Views"
    Title="Tomefico"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="#FDE0CD">


    <TabBar>
        <ShellContent
            Icon="icon_dashboard.png"
            Title="Start"
            ContentTemplate="{DataTemplate views:DashboardPage}"
            Route="DashboardPage" />
        <ShellContent
            Title="Bibliothek"
            Icon="icon_library.png"
            ContentTemplate="{DataTemplate views:LibraryPage}"
            Route="LibraryPage" />
        <ShellContent
            Title="Autoren"
            Icon="icon_authors.png"
            ContentTemplate="{DataTemplate views:AuthorPage}"
            Route="AuthorPage" />

        <ShellContent
            Title="Einstellungen"
            Icon="icon_settings.png"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>    

    



</Shell>
